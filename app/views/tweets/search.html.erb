<p style="color: green"><%= notice %></p>

<% content_for :title, "Tweets" %>

<div class="container text-center justify-content-center px-5">

  <h1>Tweets encontrados</h1>
  
  <div id="tweets">
    <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr class="table-success">
          <th class="ancho-100 text-start" scope="col">Id</th>
          <th class="ancho-350 text-start" scope="col">Descripción</th>
          <th class="ancho-350 text-start" scope="col">Username</th>
          <th class="ancho-100 text-start" scope="col"></th>
          <th class="ancho-100 text-start" scope="col"></th>
        </tr>
      </thead>
      <tbody >
        <% @tweets.each do |tweet| %>
          <%= render tweet %>
        <% end %>
      </tbody>
    </table>
    </div>
      <!--<%== pagy_bootstrap_nav(@pagy) %>  Renderiza la navegación de Bootstrap -->
    <nav aria-label="Page navigation">
      <ul class="pagination pagination-lg justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) %>
      </ul>
    </nav>
      <!--<%== pagy_custom_bootstrap_nav(@pagy) %> -->

  </div>

</div>